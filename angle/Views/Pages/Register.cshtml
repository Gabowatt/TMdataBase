@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}



<div style="background-image: url('~/../../Content/Images/Registerbg.jpg'); background-size: 1024px 768px; background-repeat: no-repeat" class="panel-body text-center bg-center">
    <div class="row" style="height:400px;"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3">
                    </div>
                    <div class="col-md-3">
                        <form role="form" data-parsley-validate="" novalidate="">
                            <!--Name Form-->
                            <div class="form-group">
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="name" id="name" placeholder="Nombre" />
                                    </div>
                                </div>
                            </div>
                            <!--Last Name Form-->
                            <div class="form-group">
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-circle fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="name" id="last" placeholder="Apellidos" />
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="height:15px;"></div>
                            <!--Postal Address Form-->
                            <div class="form-group">
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-server fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="name" id="postal" placeholder="Dirección Postal" />
                                    </div>
                                </div>
                            </div>
                            <!--Postal Address Form-->
                            <div class="form-group">
                                <div class="cols-sm-10">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-circle fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="name" id="postal2" placeholder="Dirección Postal" />
                                    </div>
                                </div>
                            </div>
                            <!--Country/Town-->
                            <div class="form-group">
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-blank fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="name" id="town" placeholder="Pueblo" />
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-blank fa" aria-hidden="true"></i></span>
                                        <input type="text" class="form-control" name="name" id="country" placeholder="País" />
                                    </div>
                                </div>
                            </div>
                            </div>
                            <div class="row" style="height:15px;"></div>
                            <!--CivilState/Gender-->
                            <div class="form-group">
                            <div class="row">
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-blank fa" aria-hidden="true"></i></span>
                                        <select class="form-control input-sm" id="CivilState">
                                            <option value="" selected hidden>Estado Civil</option>
                                            <option>Soltero/a</option>
                                            <option>Comprometido/a</option>
                                            <option>Casado/a</option>
                                            <option>Divorciado/a</option>
                                            <option>Viudo/a</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xs-6 col-sm-6 col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-blank fa" aria-hidden="true"></i></span>
                                        <select class="form-control input-sm" id="Gender">
                                            <option value="" selected hidden>Género</option>
                                            <option>Hombre</option>
                                            <option>Mujer</option>
                                         </select>
                                    </div>
                                </div>
                            </div>
                          </div>
                        <!--Checkboxes-->
                            <div class="checkbox style-2 pull-left">
                                <h3><input type="checkbox" value="" id="check1">Primera vez que visita</h3>
                            </div>
                    </form>
                    </div>
                    <div class="col-md-3">
                        <form role="form">
                            <div class="form-group">

                                <label for="exampleInputEmail1">
                                    Email address
                                </label>
                                <input type="email" class="form-control" id="exampleInputEmail1" />
                            </div>
                            <div class="form-group">

                                <label for="exampleInputPassword1">
                                    Password
                                </label>
                                <input type="password" class="form-control" id="exampleInputPassword1" />
                            </div>
                            <div class="form-group">

                                <label for="exampleInputFile">
                                    File input
                                </label>
                                <input type="file" id="exampleInputFile" />
                                <p class="help-block">
                                    Example block-level help text here.
                                </p>
                            </div>
                            <div class="checkbox">

                                <label>
                                    <input type="checkbox" /> Check me out
                                </label>
                            </div>
                            <button type="submit" class="btn btn-default">
                                Submit
                            </button>
                        </form>
                    </div>
                    <div class="col-md-3">
                    </div>
                </div>
            </div>
        </div>
        <div class="row" style="height:400px;"></div>
    </div>


</div>
